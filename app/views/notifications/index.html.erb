<div class="container">
	<div class="page-header col-md-12">
			<div class="col-md-10"><span class="h1">Notifications</span></div>
			<div class="col-md-2 vertical-center"><%= link_to "New Notification", "notifications/new" %></div>
	</div>
</div>

<div class="container">
	<div class="col-md-8">
		<% @notifications.each do |notification| %>
		<div class="panel panel-default">
		  	<div class="panel-body">
		    	<div class="col-md-12">
   					<h3 class="panel-title"><%= notification.message %></h3>

		    		<div class='col-md-10'>
		    			<h4><small><%= notification.display_language %></small></h4><h4><small><%= notification.created_at %></small></h4>
		    		</div>
		    		<div class='col-md-2'>
		    			<%= link_to "View", notification %>
		    		</div>
		    	</div>
	  		</div>
	  	</div>
	  	<% end %>
	</div>
</div>