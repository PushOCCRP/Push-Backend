<div class="container">
  <div class="page-header col-md-8 col-md-offset-3">
      <div class="col-md-12"><span class="h1">New User</span></div>
  </div>
</div>

<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@user, url: {action: "update"}) do |f| %>
      <%= @devise_error_messages %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <br />
      <div class="actions">
        <%= f.submit "Edit", class:"btn btn-default" %>
      </div>
    <% end %>
    
  </div>
</div>